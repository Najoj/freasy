<request>

	<match_by>
		<attribute>category</attribute>
		<operator>ILIKE</operator>
		<value>%games%</value>
	</match_by>
	
	<order_by>
		<attribute>app_name</attribute>
	</order_by>
	
	<answer_format>
		<offset>0</offset>
		<number_of_objects>10</number_of_objects>
	</answer_format>
	
	<pad_reference_object>
		<app_id/>
		<app_name/>
		<description/>
		<category/>
		<primary_download_url/>
	</pad_reference_object>
	
</request>
